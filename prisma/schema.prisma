generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model WebhookEvent {
  id Int @id @default(autoincrement())
  source String
  eventId String?
  payload Json
  status WebhookStatus @default(RECEIVED)
  attempts Int @default(0)
  lastError String?
  receivedAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("webhookEvent")
  @@unique([source, eventId])
}


enum WebhookStatus {
  RECEIVED
  PROCESSING
  DELIVERED
  FAILED
}